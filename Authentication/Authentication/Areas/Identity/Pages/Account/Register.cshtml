@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="abc-web">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section class="register-form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="sign-in">Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Address"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.DOB"></label>
                    <input asp-for="Input.DOB" class="form-control" />
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary sign-in-button">Register</button>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section class="register-image-container">
            
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="no-external-logins">
                        <img src="https://i.pinimg.com/564x/b2/f5/ee/b2f5eef8379cfdbe50efcc2c7cf81559.jpg" alt="No external authentication services configured" class="no-external-logins-image" />
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <p>
            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                article
                about setting up this ASP.NET application to support logging in via external services
            </a>.
        </p>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #122620;
    }

    h1.abc-web {
        text-align: center;
        color: gold;
        margin-bottom: 20px;
    }

    h2.sign-in {
        color: gold;
    }

    .form-label {
        margin-bottom: 5px;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .sign-in-button {
        margin-top: 10px;
        background-color: gold;
        border-color: gold;
        color: black;
    }

        .sign-in-button:hover {
            background-color: #e6b800;
            border-color: #e6b800;
            color: black;
        }

    .col-md-4 {
        width: 50%;
    }

    .col-md-6 {
        width: 50%;
        height: 100vh;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .register-form-container {
        width: 100%;
        max-width: 600px; /* Đặt giới hạn chiều rộng tối đa cho form */
        padding: 20px;
    }

    .register-image-container {
        width: 100%;
        height: 100%;
        overflow: hidden;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-image {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .register-image-container h3 {
        color: gold;
    }

    .text-center {
        text-align: center;
    }

    .btn-primary {
        margin: 5px;
    }

    .form-horizontal {
        text-align: center;
    }

    .links-container a, .register-image-container a {
        color: white;
    }

        .links-container a:hover, .register-image-container a:hover {
            color: #e6e6e6;
        }

    .no-external-logins {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .no-external-logins-image {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .footer {
        background-color: #122620;
        padding: 20px 0;
        color: white;
        text-align: center;
    }
</style>
