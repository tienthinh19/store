@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('https://scontent.fhan4-6.fna.fbcdn.net/v/t39.30808-6/454731706_1040830574075025_617494866990165356_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=f727a1&_nc_ohc=cpP8R7vS6ZwQ7kNvgHbGXb0&_nc_ht=scontent.fhan4-6.fna&oh=00_AYCrzLfHBBZE0-xsNcKD24tAuLiMW0dr78cem77mpVE73g&oe=66BCAE53');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh; /* Chiều cao của toàn bộ màn hình */
            margin: 0; /* Loại bỏ margin mặc định */
            overflow: hidden; /* Ngăn không cho trang cuộn lên hoặc xuống */
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
            padding-top: 20px; /* Đẩy hình nền xuống 20px */
        }

        .register-form-container {
            background-color: rgba(0, 0, 0, 0.5); /* Màu nền cho phần form đăng ký */
            padding: 20px;
            width: 50%; /* Chiều rộng của form đăng ký */
            max-width: 600px; /* Chiều rộng tối đa */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Đổ bóng */
        }

        .form-control {
            margin-bottom: 10px;
        }

        .sign-in-button {
            margin-top: 10px;
            background-color: gold;
            border-color: gold;
            color: black;
        }

            .sign-in-button:hover {
                background-color: #e6b800;
                border-color: #e6b800;
                color: black;
            }

        .links-container a {
            color: white;
        }

            .links-container a:hover {
                color: #e6e6e6;
            }

        .navbar {
            display: none; /* Ẩn thanh navbar đi */
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="register-form-container">
        <h2 class="text-center text-light">Register</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.Name">Full Name</label>
                <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.Address">Address</label>
                <input asp-for="Input.Address" class="form-control" placeholder="Enter your address" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.DOB">Date of Birth</label>
                <input asp-for="Input.DOB" type="date" class="form-control" placeholder="Select your date of birth" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.Email">Email address</label>
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="register-submit" type="submit" class="btn btn-lg btn-primary btn-block sign-in-button">Register</button>
            <div class="mt-3 text-center links-container">
                <p>
                    <a asp-page="./Login" class="text-light">Already have an account? Log in here.</a>
                </p>
            </div>
        </form>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

